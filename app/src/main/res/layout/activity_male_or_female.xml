<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MaleOrFemaleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/femaleImageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="femaleImageButtonPressed"
            android:src="@color/ClaretRed" />

        <ImageButton
            android:id="@+id/maleImageButton4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="maleImageButtonPressed"
            android:src="@color/colorPrimaryDark" />
    </LinearLayout>
</RelativeLayout>